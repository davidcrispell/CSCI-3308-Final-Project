{{!-- Cardio page --}}
<h2>Cardio Workouts</h2>
<p>Record running, cycling, and other endurance workouts.</p>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Workout Name</th>
        <th>Distance</th>
        <th>Duration</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each cardiologs}}
      <tr>
        <td>{{date}}</td>
        <td>{{../name}}</td>
        <td>{{distance}} mi</td>
        <td>{{duration}} min</td>
        <td>
          <button class="btn btn-secondary btn-sm">Edit</button>
          <button class="btn btn-danger btn-sm">Delete</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#cardio_modal">Log Cardio</button>

<div class="modal fade" id="cardio_modal" tabindex="-1" aria-labelledby="cardio_label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="cardio_label">Log Cardio Workout</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="cardio_form">
          <div class="mb-3">
            <label class="form-label" for="cardio_name">Workout Name</label>
            <input type="text" class="form-control" id="cardio_name" required>
          </div>
          <div class="mb-3">
            <label class="form-label" for="cardio_date">Date</label>
            <input type="date" class="form-control" id="cardio_date" required>
          </div>
          <div class="mb-3">
            <label class="form-label" for="cardio_distance">Distance (miles)</label>
            <input type="number" step="0.01" class="form-control" id="cardio_distance" required>
          </div>
          <div class="mb-3">
            <label class="form-label" for="cardio_duration">Duration (minutes)</label>
            <input type="number" class="form-control" id="cardio_duration" required>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>
